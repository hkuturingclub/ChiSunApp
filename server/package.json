{
  "name": "apollo-server-boilerplate",
  "version": "1.0.0",
  "description": "apollo server es6 boilerplate",
  "author": "lXSPandora",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.5",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-0": "^6.24.1",
    "cross-conf-env": "^1.1.2",
    "eslint": "^6.2.2",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-plugin-flowtype": "^2.49.3",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.4.0",
    "lint-staged": "^7.2.0",
    "nodemon": "^1.17.5",
    "pre-commit": "^1.2.2",
    "prettier": "^1.13.7",
    "prettier-eslint": "^8.8.2"
  },
  "dependencies": {
    "apollo-server": "^2.14.2",
    "babel-polyfill": "^6.26.0",
    "dataloader": "^1.4.0",
    "dotenv-safe": "^6.0.0",
    "firebase": "^5.8.0",
    "graphql": "^14.5.3",
    "graphql-playground-middleware": "^1.1.2",
    "graphql-tag": "^2.10.1"
  },
  "pre-commit": "lint:staged",
  "lint-staged": {
    "*.js": [
      "yarn prettier",
      "eslint --fix",
      "git add"
    ]
  },
  "scripts": {
    "babel-node": "babel-node",
    "start": "node dist/index.js",
    "dev": "nodemon --exec npm run babel-node -- src/index.js",
    "debug": "nodemon --exec npm run babel-node -- src/index.js --inspect",
    "lint": "eslint \"src/**/*.js*\"",
    "lint:staged": "lint-staged",
    "prettier": "prettier --write --single-quote true --trailing-comma all --print-width 120",
    "prettier:all": "prettier --write --single-quote true --trailing-comma all --print-width 120 --write 'src/**/*.js'",
    "docker:up": "docker-compose up --build",
    "heroku-postbuild": "babel src --out-dir dist --copy-files",
    "deploy": "git push heroku `git subtree split --prefix server master`:master --force"
  }
}
